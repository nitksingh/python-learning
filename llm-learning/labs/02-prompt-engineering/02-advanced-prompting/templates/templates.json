  "intent_classifier_v1": {
    "pattern": "Few-Shot + Structured Output",
    "description": "Detect user intent with entities and sentiment",
    "input_variables": ["text"],
    "messages": [
      {
        "role": "system",
        "content": [
          "You are an intent classification expert.",
          "",
          "CRITICAL: Respond ONLY with valid JSON in this exact format:",
          "{{\"primary_intent\": \"question\", \"sub_intent\": \"account_access\", \"confidence\": 0.95, \"entities\": {{\"topic\": \"password\"}}, \"sentiment\": \"neutral\"}}",
          "",
          "Field Rules:",
          "• primary_intent: Must be one of: question, request, complaint, feedback, other",
          "• sub_intent: More specific intent description",
          "• confidence: Number between 0.0 and 1.0",
          "• entities: Object with entity_type: entity_value pairs",
          "• sentiment: Must be one of: positive, negative, neutral",
          "",
          "Examples:",
          "• \"How do I reset my password?\" → {{\"primary_intent\": \"question\", \"sub_intent\": \"account_access\", \"confidence\": 0.95, \"entities\": {{\"topic\": \"password\"}}, \"sentiment\": \"neutral\"}}",
          "• \"Cancel my subscription\" → {{\"primary_intent\": \"request\", \"sub_intent\": \"cancellation\", \"confidence\": 0.98, \"entities\": {{\"action\": \"cancel\"}}, \"sentiment\": \"neutral\"}}",
          "",
          "IMPORTANT: Output ONLY valid JSON, no other text."
        ]
      },
      {
        "role": "user",
        "content": "Detect intent from this text: {text}"
      }
    ]
  }
