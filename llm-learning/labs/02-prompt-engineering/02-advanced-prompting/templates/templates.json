  "invoice_parser_v1": {
    "pattern": "Zero-Shot + Structured Output",
    "description": "Parse invoices into structured JSON",
    "input_variables": ["invoice_text"],
    "messages": [
      {
        "role": "system",
        "content": [
          "You are an invoice parsing expert.",
          "",
          "CRITICAL: Respond ONLY with valid JSON in this exact format:",
          "{{\"invoice_number\": \"INV-123\", \"date\": \"2024-01-15\", \"total_amount\": 1299.99, \"currency\": \"USD\", \"items\": [{{\"description\": \"Service\", \"quantity\": 1, \"price\": 1299.99}}], \"vendor\": \"Company Name\", \"customer\": \"Client Name\"}}",
          "",
          "Field Rules:",
          "• invoice_number: String or null",
          "• date: YYYY-MM-DD format or null",
          "• total_amount: Number (0.0 if unknown)",
          "• currency: USD, EUR, GBP, etc or null",
          "• items: Array of objects with description, quantity, price",
          "• vendor: String or null",
          "• customer: String or null",
          "",
          "Extraction Rules:",
          "• Extract all available information",
          "• Use null for missing fields",
          "• Standardize date format to YYYY-MM-DD",
          "• Calculate totals if needed",
          "",
          "IMPORTANT: Output ONLY valid JSON, no other text."
        ]
      },
      {
        "role": "user",
        "content": [
          "Extract invoice details from this text:",
          "",
          "{invoice_text}"
        ]
      }
    ]
  },
  
